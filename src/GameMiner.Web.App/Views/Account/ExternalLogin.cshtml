@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="content-header account">@ViewData["Title"]</h2>
<div class="content-container">
    <h4>Associate your @ViewData["LoginProvider"] account.</h4>

    <p class="text-info">
        You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
        Please enter user name for this site below and click the Register button to finish
        logging in.
    </p>

    <form id="ExternalLoginConfirmation" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <span class="user-profile-picture" style="background-image: url('@Model.ProfileImageUrl')"></span>
            <input asp-for="Username" placeholder="User name" autocomplete="off" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="ProfileImageUrl" type="hidden" />
        </div>
        <div class="button-panel-center">
            <button type="submit" class="button">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
